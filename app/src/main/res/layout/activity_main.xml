<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/buyTicketsFrame"
        android:layout_width="230dp"
        android:layout_height="230dp"
        style="@style/MainButton"
        android:layout_marginTop="200dp"
        android:layout_marginStart="25dp"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/bot_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/bot" />

            <ImageView
                android:id="@+id/convers_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bot_image"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/convers" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="Buy Tickets"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="through chatbot"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/callRep"
        style="@style/MainButton"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="9dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/textCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Call a\n representative"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_phone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/myTicketsFrame"
        android:layout_width="170dp"
        android:layout_height="170dp"
        style="@style/MainButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-25dp"
        android:layout_marginStart="-25dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/textMytick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:text="My Tickets"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:padding="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ticket" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/faqFrame"
        android:layout_width="170dp"
        android:layout_height="170dp"
        style="@style/MainButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="-25dp"
        android:clickable="true"
        android:focusable="true" >
        <TextView
            android:id="@+id/textFaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins"
            android:text="FAQ"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/faq_head_ic" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accessibility_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="351dp"
        android:background="@drawable/accessibility_circle"
        android:padding="0dp"
        android:textColor="@android:color/black"
        />

    <FrameLayout
        android:id="@+id/button3Frame"
        android:layout_width="170dp"
        android:layout_height="170dp"
        style="@style/MainButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="-25dp"
        android:clickable="true"
        android:focusable="true" >
        <TextView
            android:id="@+id/textVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:text="Voice Control"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/microphone" />
    </FrameLayout>

    <include layout="@layout/bottom_menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>

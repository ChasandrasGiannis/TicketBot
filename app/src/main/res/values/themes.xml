<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TicketBot" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/ciel</item>
    </style>

    <style name="ScreenBackground" >
        <item name="android:background">@drawable/background_gradient</item>
    </style>

    <style name="WindowBackground" >
        <item name="android:background">@drawable/white_rectangle</item>
    </style>

    <style name="ButtonColour" >
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/light_blue_gradient</item>
    </style>

    <style name="MainButton" >
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/main_button</item>
    </style>

    <style name="TextColour" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactRectangle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/contactpage_rectangleinfo</item>
    </style>

    <style name="ContactTHRectangle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/contactpage_rec</item>
    </style>

    <style name="TransparentRectangle" >
        <item name="android:background">@drawable/transparent_rectangle</item>
    </style>

    <style name="HelpMButton" >
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/gradient_helpmenu</item>
    </style>

    <style name="PlainText" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlainText2" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MicButton" >
        <item name="android:background">@drawable/button_mic</item>
    </style>

    <style name="LeftSparkles" >
        <item name="android:background">@drawable/down_sparkles2</item>
    </style>

    <style name="RightSparkles" >
        <item name="android:background">@drawable/down_sparkles</item>
    </style>

    <style name="CurrentPage" >
        <item name="android:background">@drawable/circle_currentpage</item>
    </style>

    <style name="AnyOtherPage" >
        <item name="android:background">@drawable/circle_anyotherpage</item>
    </style>

    <style name="Title" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/title_rectangle</item>
    </style>

    <style name="AuditTitle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/audit_title</item>
    </style>

    <style name="StageTitle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/title_rectangle</item>
    </style>

    <style name="Container" >
        <item name="android:background">@drawable/container</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="CancelButton" >
        <item name="android:background">@drawable/button_orange_gradient</item>
    </style>

    <style name="AvailableSeat" >
        <item name="android:background">@drawable/seat_tracker</item>
    </style>

    <style name="UnavailableSeat" >
        <item name="android:background">@drawable/unavailable_seat</item>
    </style>
    <style name="SelectedSeat" >
        <item name="android:background">@drawable/selected_seat</item>
    </style>

    <style name="PurchaseButton" >
        <item name="android:background">@drawable/button_blue_gradient</item>
    </style>

    <style name="ErrorBackground" >
        <item name="android:background">@drawable/error_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Ticket">
        <item name="android:background">@drawable/ticket</item>
    </style>

    <style name="ChatBotBar">
        <item name="android:background">"@color/ciel"</item>
    </style>

    <style name="LeftChatBubble">
        <item name="android:background">@drawable/button_orange_gradient</item>
    </style>

    <style name="BackArrow">
        <item name="android:background">"@drawable/ic_back_arrow"</item>
    </style>

    <style name="PlayTitle">
        <item name="android:background">@drawable/rounded_background_blue</item>
    </style>


    <style name="Theme.TicketBot" parent="Base.Theme.TicketBot" />
</resources>